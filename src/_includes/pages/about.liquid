---
layout: base
---

<main class="wrapper flow" data-wraps="content" id="main-content">
    <section id="intro">
        <h1>{{ nav.about | defaultLocale: locale | capitalize }}</h1>
        <p>{{ pages.about.intro | defaultLocale: locale | safe }}</p>
    </section>

    <section id="aims" data-divider="regular">
        <h2>{{ pages.about.aims.heading | defaultLocale: locale }}</h2>
        <p>{{ pages.about.aims.paragraph | defaultLocale: locale | safe }}</p>
        <p>{{ pages.about.aims.learning | defaultLocale: locale | safe }}</p>
    </section>

    <section id="who" data-divider="regular">
        <h2>{{ pages.about.who.heading | defaultLocale: locale }}</h2>
        <div class="flex-wrap" data-reverse>
            <div>
                {{ pages.about.who.paragraph | defaultLocale: locale | safe }}
            </div>
            <div class="card" data-type="small-image-only">
                {% image "./src/_includes/img/fershad.jpg", "", "200, 400" %}
            </div>
        </div>
    </section>

    <section id="roadmap" data-divider="regular">
        <h2>{{ pages.about.roadmap.heading | defaultLocale: locale }}</h2>
        <p>
            {{ pages.about.roadmap.paragraph | defaultLocale: locale | safe }}
        </p>
    </section>

    <section id="contribute" data-divider="regular">
        <h2>{{ pages.about.contribute.heading | defaultLocale: locale }}</h2>
        <p>{{ pages.about.contribute.paragraph | defaultLocale: locale | safe }}</p>
        <ul>
            {% for item in pages.about.contribute.list %}
                <li>{{ item[1] | defaultLocale: locale }}</li>
            {% endfor %}
        </ul>
        <div class="flex-wrap cta-button-holder" data-align="left">
            <a class="link--button" href="mailto:{{site.contact.email}}">{{ site.emailMe | defaultLocale: locale }}</a>
            <a class="link--button" href="{{ site.contact.twitterURL }}">{% include "svg/twitter.svg" %}{{ pages.about.contribute.twitter | defaultLocale: locale }}</a>
        </div>
    </section>

    <section id="support"  data-divider="regular">
        <h2>{{ pages.about.support.heading | defaultLocale: locale }}</h2>
        <p>{{ pages.about.support.paragraph | defaultLocale: locale | safe }}</p>
        <ul>
            {% for item in pages.about.support.list %}
                <li>{{ item | defaultLocale: locale }}</li>
            {% endfor %}
        </ul>
        <h3>{{ pages.about.support.ways.heading | defaultLocale: locale }}</h3>
        <!-- <p>{{ pages.about.support.ways.paragraph | defaultLocale: locale }}</p> -->
        <div class="auto-grid">
            <div>
                <h4>{{ pages.about.support.ways.once.heading | defaultLocale: locale }}</h4>
                <p>Make a one-off contribution to help cover the expenses of this project.</p>
                <div class="cta-button-holder" data-align="left">
                    <a href="{{ site.support.kofi.url }}" class="link--button">{% include "svg/kofi.svg" %}{{ site.support.kofi.action | defaultLocale: locale }}</a>
                </div>
            </div>
            <div>
                <h4>{{ pages.about.support.ways.monthly.heading | defaultLocale: locale }}</h4>
                <p>Support work on this project with a small, monthly contribution.</p>
                <div class="cta-button-holder" data-align="left">
                    <a href="{{ site.support.patreon.url }}" class="link--button">{% include "svg/patreon.svg" %}{{ site.support.patreon.action | defaultLocale: locale }}</a>
                </div>
            </div>
        </div>
    </section>
</main>