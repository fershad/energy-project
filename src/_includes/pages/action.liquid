---
layout: base
---

<main class="wrapper flow" data-wraps="content" id="main-content">
    {% if locale == 'zh' %}
        {% assign actions = collections.ActionsZH %}
    {% else %}
        {% assign actions = collections.ActionsEN %}
    {% endif %}

    <section data-overflow="allow" id="action">
        <h1>{{ pages.homepage.action.heading | defaultLocale: locale | capitalize }}</h1>
        <p>{{ pages.homepage.action.paragraph | defaultLocale: locale | safe }}</p>
        <div class="action-grid auto-grid">
            {% for action in actions %}
            <div class="card" {% if  action.data.hasMore %}data-more="true"{% endif %}>
                {% image action.data.thumbnail.src,  action.data.thumbnail.alt, "252, 504, 321 642", "(min-width: 780px) 321px, (min-width: 580px) 252px, (min-width: 540px) calc(100vw - 28px), calc(9.55vw + 442px)" %}
                <div class="card--content">
                    <p class="card--content--heading underlined" data-color="ocean-blue">
                        {{ action.data.title }}
                    </p>
                    <p class="card--content--subtag">{{ action.data.subtag }}</p>
                    {% if action.data.hasMore %}
                        <a href="{{ action.url }}" class="link--button card--action">Read more</a>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
    </section>
</main>