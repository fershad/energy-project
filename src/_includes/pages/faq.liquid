---
layout: layouts/base
---

<main class="wrapper flow" data-wraps="content" id="main-content">
    <section id="intro">
        <h1>{{ page.faq.intro.heading | defaultLocale: locale | capitalize }}</h1>
        <p>{{ page.faq.intro.paragraph | defaultLocale: locale | safe }}</p>
    </section>

    <section id="questions flow">
        <div class="faq">
            {% for question in page.faq.questions %}
                <details>
                    <summary>
                        <h2 class="question">{{ question.question | defaultLocale: locale | safe }}</h2>
                    </summary>
                    <p class="answer">{{ question.answer | defaultLocale: locale | safe }}</p>
                </details>
            {% endfor %}
        </div>
    </section>
    <div class="divider full-width" data-last="true" data-type>
        {% include "svg/seaside.svg" %}
    </div>
</main>