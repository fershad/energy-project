<!-- Facebook -->
<meta property="og:url" content="{{ site.baseUrl }}{{ page.url }}">
<meta property="og:type" content="website">
<meta property="og:title" content="{{ pageTitle }}">
<meta property="og:description" content="{{ pageDescription }}">
<meta property="og:site_name" content="{{ site.name[locale] }}">
{% if locale === 'zh' %}
<meta property="og:locale" content="zh_TW">
{% else %}
<meta property="og:locale" content="en_GB">
{% endif %}
{% if ogLarge %}
    <meta property="og:image" content="{{ site.baseUrl }}/en/LargeOG.jpg">
{% else %}
    <meta property="og:image" content="{{ site.baseUrl }}/en/SmallOG.jpg">
{% endif %}
<meta property="og:image:alt" content="{{ site.ogImgAlt[locale] }}">

<!-- Twitter -->
{% if ogLarge %}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:image" content="{{ site.baseUrl }}/LargeOG.jpg">
{% else %}
<meta name="twitter:card" content="summary">
<meta name="twitter:image" content="{{ site.baseUrl }}/SmallOG.jpg">
{% endif %}
<meta name="twitter:site" content="@cleanenergyproject_tw">
<meta name="twitter:creator" content="@fershad">
<meta name="twitter:url" content="{{ site.baseUrl }}{{ page.url }}">
<meta name="twitter:title" content="{{ pageTitle }}">
<meta name="twitter:description" content="{{ pageDescription }}">
<meta name="twitter:image:alt" content="{{ site.ogImgAlt[locale] }}">