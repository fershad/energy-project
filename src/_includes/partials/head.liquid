{% if title %}
    {% capture pageTitle %}
        {{ title }} | {{ site.name[locale] }}
    {% endcapture %}
{% else %}
    {% assign pageTitle = site.name[locale] %}
{% endif %}

{% unless shortDescription %}
    {% assign pageDescription = site.description[locale] %}
{% else %}
    {% assign pageDescription = shortDescription %}
{% endunless %}

{% include 'partials/metadata' %}

<link rel="preconnect" href="https://api.websitecarbon.com/">
<link rel="preconnect" href="https://heron.cleanenergyproject.tw/" crossorigin>

{% if preload %}
    {% for item in preload %}
        <link rel="preload" href="{{ item.link }}" as="{{ item.type }}">
    {% endfor %}
{% endif %}

{% if prefetch %}
    {% for item in prefetch %}
        <link rel="prefetch" href="{{ item.link }}">
    {% endfor %}
{% endif %}

{% include 'partials/favicon' %}
{% include 'partials/social-image' %}
{% analytics %}