<footer class="footer">
    <div class="wrapper">
        <div class="maintainer">
            <p>
                {{ partial.footer.maintainer | defaultLocale: locale | safe }}
            </p>
        </div>
        {% unless hasSubscription %}    
        <div class="subscription">
            <p class="h3" data-color="white" data-wide>{{ partial.footer.subscribe.heading | defaultLocale: locale }}</p>
            <p>{{ partial.footer.subscribe.intro | defaultLocale: locale }}</p>
            {% include "partials/subscription" %}
        </div>
        {% endunless %}
        <div class="nav__list">
            <ul class="nav__menu-list" role="navigation">
                {% for item in nav %}
                    <li class="nav__link">
                        <a href="/{{ locale }}{{ item[1].link }}">{{ item[1] | defaultLocale: locale | capitalize }}</a>
                    </li>
                {% endfor %}      
            </ul>
        </div>
        <div data-carbon id="wcb" class="carbon carbonbadge wcb-d"></div>
        <div class="social">
            <a class="icon-link" href="{{ site.contact.twitterURL }}" aria-label="Follow on Twitter">{% include "svg/twitter.svg" %}</a>
            <a class="icon-link" href="//github.com/fishintaiwan/taiwan-clean-energy-project" aria-label="View code on Github">{% include "svg/github.svg" %}</a>
            <a href="{{ site.support.kofi.url }}" class="icon-link" aria-label="Support on Ko-fi">{% include "svg/kofi.svg" %}</a>
            <a href="{{ site.support.patreon.url }}" class="icon-link" aria-label="Support on Patreon">{% include "svg/patreon.svg" %}</a>
        </div>
    </div>
</footer>

<!-- Fetch carbon data -->
<script src="/assets/carbon.bundle.js" type="module"></script>
<script nomodule src="/assets/carbon.legacy.js"></script>
